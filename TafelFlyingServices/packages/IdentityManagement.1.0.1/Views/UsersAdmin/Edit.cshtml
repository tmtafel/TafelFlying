@model Commerce.IdentityManagement.Models.EditUserViewModel

@{
    ViewBag.Title = "Edit User";
}
<div class="page-header"><h1>Edit User Profile<small>
    <i class="icon-double-angle-right"></i>
    @Model.UserName
</small></h1></div>
<div class="row">
    <div class="col-xs-6">
        @using (Html.BeginForm("Edit", "UsersAdmin", new{role="form"}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
        <h3 class="header smaller lighter blue">Roles <br/><small>Check roles that will be assigned to the user and uncheck roles that will be removed from user's list</small></h3>
        <div class="row">
            <div class="col-xs-12 col-sm-5">
                <div class="control-group">
                    @foreach (var item in Model.RolesList)
                    {
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="ace" />
                                <span class="lbl"> @item.Value</span>
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="form-actions">
            <a class="btn btn-danger btn-sm" href="@Url.Action("Index", "UsersAdmin")"><i class="ace-icon fa fa-arrow-left"></i> Go back</a> <button type="submit" class="btn btn-sm btn-primary"><i class="ace-icon fa fa-check bigger-110"></i> Save</button>
        </div>
    </div>
}
    </div>
</div>
@section breadcrumbs{
    <ul class="breadcrumb">
        <li>
            <i class="ace-icon fa fa-home home-icon"></i>
            <a href="@Url.Action("Index", "Home")">Home</a>
        </li>
        <li><a href="@Url.Action("Index", "UsersAdmin")"><i class="ace-icon fa fa-users"></i> Users</a></li>
    <li class="active">@Model.UserName</li>
    </ul><!-- .breadcrumb -->
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}