@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "Delete Role";
}
<div class="row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                @using (Html.BeginForm("Delete", "RolesAdmin", FormMethod.Post, new { role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="widget-box widget-color-orange">
                        <div class="widget-header"><h4 class="widget-title">Delete @Model.Name role</h4></div>
                        <div class="widget-body">
                            <div class="widget-main">
                                <div class="alert alert-info">
                                    <p>Are you sure you want to delete this Role? </p>
                                    <p>Deleting this Role will remove all users from this role. It will not delete the users.</p>
                                </div>
                                <div class="widget-toolbox padding-8 clearfix">
                                    <div class="pull-left"><a class="btn btn-sm btn-danger" href="@Url.Action("Index", "RolesAdmin")"><i class="fa fa-thumbs-o-down"></i> No</a></div>
                                    <div class="pull-right"><button type="submit" class="btn btn-sm btn-success"><i class="fa fa-thumbs-o-up"></i> Yes</button></div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
    @section breadcrumbs{
        <ul class="breadcrumb">
            <li>
                <i class="ace-icon fa fa-home home-icon"></i>
                <a href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li><a href="@Url.Action("Index", "RolesAdmin")">Roles</a>li>
            <li class="active">Delete</li>
        </ul><!-- .breadcrumb -->
    }
