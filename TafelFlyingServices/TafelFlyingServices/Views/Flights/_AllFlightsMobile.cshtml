@using Mvc.RazorTools.FontAwesome
@using TafelFlyingServices.Models
@model IEnumerable<TafelFlyingServices.Models.Flight>

@foreach (Flight item in Model)
{
    string date = item.Departure.ToString("MMMM dd, yyyy");
    <div class="col-xs-12 mobile-flight">
        <div class="row">
            <h3 class="col-xs-5">
                @Html.DisplayFor(modelItem => item.Plane.TailNumber)
            </h3>
            <h4 class="col-xs-7 text-right">
                @Html.DisplayFor(modelItem => date)
            </h4>
        </div>
        <div class="row">
            <div class="col-xs-5">
                <strong>@Html.DisplayFor(modelItem => item.Departure)</strong><br />
                @Html.DisplayFor(modelItem => item.DepartureAirport.Name)

            </div>
            <h1 class="col-xs-2">
                <a href="/Flights/Details/@item.FlightId">@Html.FontAwesome(FontAwesomeIconSet.ArrowCircleORight)</a>
            </h1>
            <div class="col-xs-5 text-right">
                <strong>@Html.DisplayFor(modelItem => item.Arrival)</strong><br />
                @Html.DisplayFor(modelItem => item.ArrivalAirport.Name)

            </div>
        </div>

    </div>
}