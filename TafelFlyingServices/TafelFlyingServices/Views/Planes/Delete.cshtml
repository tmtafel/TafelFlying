@model TafelFlyingServices.Models.Plane

@{
    ViewBag.Title = Model.TailNumber + " - Delete";
}

<div class="plane-details">
    <div class="plane-header" style="background-color: @Model.Color;">
        <div class="container">
            <h2 style="color: @Model.BlackText;">
                @Html.DisplayFor(model => model.TailNumber)
            </h2>
        </div>
    </div>

    <h3>Are you sure you want to delete this Plane?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Aircraft.Make)</dt>
            <dd>@Html.DisplayFor(model => model.Aircraft.Make)</dd>
            <dt>@Html.DisplayNameFor(model => model.Aircraft.Model)</dt>
            <dd>@Html.DisplayFor(model => model.Aircraft.Model)</dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions btn-group btn-group-lg">
                <input type="submit" value="Delete" class="btn btn-saffron-umbrella-1" />
                @Html.ActionLink("Back to List", "Index", null, new {@class = "btn btn-saffron-umbrella-1"})
            </div>
        }
    </div>
</div>